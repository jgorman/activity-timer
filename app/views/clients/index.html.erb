<div class="table-responsive">
  <p>
    <%= link_to "New client", new_client_path %>
  </p>

  <table class="table">
    <tr>
      <th>Name</th>
    </tr>

    <% @clients.each do |client| %>
      <tr>
        <td>
          <%= link_to(client.name, client_path(client)) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
