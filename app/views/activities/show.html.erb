<% @page_title = "Activity #{@activity.project.client.name} - #{@activity.project.name}" %>

<p>
  <%= link_to 'Client', client_path(@activity.project.client) %> |
  <%= link_to 'Project', project_path(@activity.project) %> |
  <%= link_to 'Edit activity', edit_activity_path(@activity) %> |
  <%= link_to 'Delete activity', activity_path(@activity),
      method: :delete,
      data: { confirm: 'Delete activity?' } %> |
  <%= link_to 'Add activity', new_project_activity_path(@activity.project) %>
</p>

<label>start</label>
<p><%= @activity.start %></p>

<label>duration</label>
<p><%= @activity.duration %></p>

<label>desc</label>
<p><%= @activity.desc %></p>
